rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to members for now during development
    match /members/{memberId} {
      allow read, write: if true;
    }

    // Allow read/write access to the configuration collection
    match /configs/{configId} {
      allow read, write: if true;
    }

    match /matches/{matchId} {
      allow read: if true;
      // Allow write only for authenticated users (admins) - implement later
      allow write: if request.auth != null;

      match /shares/{shareId} {
        allow read: if true;
        // Allow write only for authenticated users (admins) - implement later
        allow write: if request.auth != null;
      }
      
      match /rosters/{rosterId} {
      	allow read: if true;
        allow write: if request.auth != null;
      }
    }

    match /teams/{teamId} {
    	allow read: if true;
      allow write: if request.auth != null;
    }
    
    // This rule allows the public /pay page to query all shares for a specific member
    match /{path=**}/shares/{shareId} {
      allow read: if true;
    }
  }
}
